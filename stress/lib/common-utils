#!/bin/bash

function check_screen()
{
    command -v screen >/dev/null 2>&1 ||
        { echo "GNU Screen it's not installed. Aborting."; exit 1; }
}


function runClara()
{
    java -cp "$CLARA_SERVICES/.:$CLARA_SERVICES/lib/*" $*
}


function get_platform_host()
{
    PLATFORM_HOST=$(hostname -s)
}


function contains()
{
    local e
    for e in "${@:2}"; do
        [[ "$e" == "$1" ]] && return 0;
    done
    return 1
}
