#!/bin/bash

function get_platform_host()
{
    PLATFORM_HOST=$(hostname -s)
    if [[ $CLARA_TEST_CHECK_HOST -eq 1 ]]; then
        return
    fi
    if [[ $PLATFORM_HOST != "head" && $PLATFORM_HOST != "claradm" ]]; then
        echo "These scripts should run in head (UofR cluster) or claradm"
        exit 1
    fi
}


function contains()
{
    local e
    for e in "${@:2}"; do
        [[ "$e" == "$1" ]] && return 0;
    done
    return 1
}
