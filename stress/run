#!/bin/bash

TEST_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

##############################################################################
# Helper functions
##############################################################################

source $TEST_DIR/lib/common-utils

##############################################################################
# Check the list of nodes
##############################################################################

NODES_FILE=$TEST_DIR/log/nodes.yaml

if [[ ! -f $NODES_FILE ]]; then
    echo "Run start first. Could not find file with description of nodes."
    exit 1
fi

##############################################################################
# Options
##############################################################################

function usage()
{
    echo "Usage:"
    echo -e "\t$0 <input_file> <output_file> <num_cores> [ <num_nodes> ]"
}


while getopts "h" OPTION
do
    case $OPTION in
        h)
            usage; exit 0 ;;
        ?)
            echo; usage; exit 1 ;;
    esac
done

shift $((OPTIND-1))
if [[ $# -lt 3  || $# -gt 4 ]]; then
    usage
    exit 1
fi

##############################################################################
# Check arguments
##############################################################################

INFILE="$1"
OUTFILE="$2"
CORES=$3
NODES=0
if [[ $# -eq 4 ]]; then
    NODES=$4
fi

##############################################################################
# Generate the list of DPEs
##############################################################################

counter=0
parser=std.orchestrators.ReconstructionConfigParser
NODES_LIST=""

while read NODE
do
    NODES_LIST="$NODES_LIST $NODE "
    let counter=counter+1
    if [[ $counter -eq $NODES ]]; then
        break
    fi
done < <(runClara $parser parse-nodes reconstruction $NODES_FILE)

if [[ $counter -lt $NODES ]]; then
    echo "Wrong number of nodes: $NODES"
    exit 1
fi

##############################################################################
# Launch DefaultOrchestrator
##############################################################################

${CLARA_SERVICES}/bin/default-orchestrator run "$INFILE" "$OUTFILE" $CORES $NODES_LIST 2>&1 |
    tee $TEST_DIR/log/run.log

exit ${PIPESTATUS[0]}
